<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_new_bg">

        <RelativeLayout
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/activity_margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/activity_margin_medium"
                android:layout_marginEnd="@dimen/activity_margin_medium">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:layout_height="90dp"
                    android:layout_marginTop="@dimen/activity_margin_normal_"
                    android:src="@drawable/edit_logo_pabili"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/activity_margin_medium"
                    android:layout_marginBottom="@dimen/activity_margin_normal_"
                    android:padding="@dimen/activity_margin_normal_"
                    android:background="@drawable/edit_profile_rect">

                    <TextView
                        android:id="@+id/tv_deli_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_normal"
                        android:padding="5dp"
                        android:text="Delivery info"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_pick_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_pick_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_pick_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_drop_off_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_normal"
                        android:padding="5dp"
                        android:text="Shop/pickup location"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="@dimen/activity_margin_normal"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_drop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_drop_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_drop_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_normal"
                        android:text="@string/parcel_d_txt"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="@dimen/activity_margin_normal"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_parcel_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_parcel_width"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_parcel_lenght"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_parcel_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_extra_normal"
                        android:text="@string/remaining_time"
                        android:textColor="@color/text_hint"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/activity_margin_normal"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_remaining_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:visibility="gone"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_normal"
                        android:text="Item List"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="@dimen/activity_margin_normal"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_item_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginBottom="@dimen/activity_margin_normal_"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_normal"
                        android:text="Cost of Goods"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="@dimen/activity_margin_normal"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_cost_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_normal"
                        android:text="Service charge"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="@dimen/activity_margin_normal"
                        android:fontFamily="@font/titillium_regular"/>

                    <TextView
                        android:id="@+id/tv_delivery_charges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="@string/drofoffinfo_txt"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_small"
                        android:fontFamily="@font/titillium_regular"/>


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_et_amt"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_normal"
                        android:text="Items Paid"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="@dimen/activity_margin_normal"
                        android:fontFamily="@font/titillium_regular"/>


                    <EditText
                        android:id="@+id/et_refrence_nmbr"
                        style="@style/edit_text_login_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin_medium"
                        android:gravity="center"
                        android:hint="@string/amonunt_txt"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                     />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_deliver"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/deliver_txt"
                        android:minHeight="0dp"
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:background="@drawable/reschedule"
                        android:textColor="@color/yellow"
                        android:layout_marginTop="@dimen/text_margin_xlarge"
                        android:fontFamily="@font/titillium_regular"
                        android:textSize="@dimen/text_size_extra_normal"
                        android:paddingTop="@dimen/text_padding"
                        android:paddingBottom="@dimen/text_padding" />

                    <Button
                        android:id="@+id/btn_route"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/activity_margin_normal_"
                        android:layout_height="wrap_content"
                        android:text="@string/route_txt"
                        android:minHeight="0dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:background="@drawable/cancel"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="@dimen/text_margin_xlarge"
                        android:fontFamily="@font/titillium_regular"
                        android:textSize="@dimen/text_size_extra_normal"
                        android:paddingTop="@dimen/text_padding"
                        android:paddingBottom="@dimen/text_padding" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_large"
                    android:text="@string/report_txt"
                    android:minHeight="0dp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:background="@drawable/report"
                    android:textColor="@color/white_color"
                    android:layout_marginTop="@dimen/activity_margin_medium"
                    android:fontFamily="@font/titillium_regular"
                    android:textSize="@dimen/text_size_extra_normal"
                    android:paddingTop="@dimen/text_padding"
                    android:paddingBottom="@dimen/text_padding" />

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/AppTheme.AppBarOverlay">

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay" >

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_btn"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/activity_margin_medium"/>


                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium_regular"
                    android:text="@string/deleveryd_d_txt"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_extra_normal" />

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/activity_margin_medium"/>
            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>